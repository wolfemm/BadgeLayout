<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BadgeLayout">
        <attr name="spacing" format="dimension" />
        <attr name="badgeBackground" format="reference" />
        <attr name="badgeTextColor" format="color" />
        <attr name="badgeTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BadgeItem">
        <attr name="android:text" />
        <attr name="android:icon" />
        <attr name="android:enabled" />
        <attr name="selected" format="boolean" />
    </declare-styleable>

</resources>